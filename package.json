{
  "name": "Stardust",
  "devDependencies": {
    "node-sass-chokidar": "^1.5.0",
    "gts": "^2.0.2",
    "typescript": "^3.8.3",
    "@types/node": "^13.11.1",
    "copyfiles": "^2.3.0",
    "concurrently": "5.3.0"
  },
  "scripts": {
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check",
    "build-css": "node-sass-chokidar src/ -o build/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o build/ --watch --recursive",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "copy-files": "copyfiles -e **/*.ts -e **/*.scss -u 1 src/**/* build",
    "build": "npm run build-css && npm run build-ts && npm run copy-files",
    "build-watch": "npm run copy-files && concurrently 'npm:watch-ts' 'npm:watch-css'"
  }
}
